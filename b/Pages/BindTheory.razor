@page "/bind-theory"

<p>
    <label>
        Normal Blazor binding:
        <input @bind="InputValue" />
    </label>
</p>

<p>
    <label>
        Demonstration of equivalet HTML binding:
        <input value="@InputValue" @onchange="@((ChangeEventArgs e)=>InputValue=e?.Value?.ToString())" />
    </label>
</p>

<p>
    <code>InputValue</code>:@InputValue
</p>

@code{
    private string? InputValue { get; set; }
}
